<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.ekene.quizzapp.FirstPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/Question_1"
                style="@style/question_text_styles"
                android:text="@string/question1" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Q1btnClicked_11"
                style="@style/buttonStyles" />

            <RadioButton
                android:id="@+id/Q1btnClicked_12"
                style="@style/buttonStyles" />

            <RadioButton
                android:id="@+id/Q1btnClicked_13"
                style="@style/buttonStyles" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Q1_answer_11"
                style="@style/answer_text_styles"
                android:text="11" />

            <TextView
                android:id="@+id/Q1_answer_12"
                style="@style/answer_text_styles"
                android:text="12" />

            <TextView
                android:id="@+id/Q1_answer_13"
                style="@style/answer_text_styles"
                android:text="13" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="16dp">

            <TextView
                style="@style/question_text_styles"
                android:text="@string/question2" />

        </LinearLayout>


        <EditText
            android:id="@+id/edit_text_answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="type answer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="16dp">

            <TextView
                style="@style/question_text_styles"
                android:text="@string/question3" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="type answer" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="16dp">

            <TextView
                style="@style/question_text_styles"
                android:text="@string/question4" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Q4btnClicked_1104"
                style="@style/buttonStyles" />

            <RadioButton
                android:id="@+id/Q4btnClicked_929"
                style="@style/buttonStyles" />

            <RadioButton
                android:id="@+id/Q4btnClicked_1189"
                style="@style/buttonStyles" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/answerq4_1104"
                style="@style/answer_text_styles"
                android:text="1104" />

            <TextView
                android:id="@+id/answerq4_929"
                style="@style/answer_text_styles"
                android:text="929" />

            <TextView
                android:id="@+id/answerq4_1189"
                style="@style/answer_text_styles"
                android:text="1189" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    style="@style/question_text_styles"
                    android:text="@string/question5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_first_answer"
                    style="@style/buttonStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <CheckBox
                    android:id="@+id/cb_second_answer"
                    style="@style/buttonStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <CheckBox
                    android:id="@+id/cb_third_answer"
                    style="@style/buttonStyles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Q5_answer_eve"
                    style="@style/answer_text_styles"
                    android:text="Eve" />

